<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <link href="/css/basic.css" rel="stylesheet">
</head>

<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/82e4826c76.js" crossorigin="anonymous"></script>


    <%- include ('partials/header.ejs') %>
        <!--Work goes here -->

        <!--Search Bar-->
        <form id="search-bar" class="d-flex p-3" role="search"
            style="max-width: 1320px; margin-right: auto; margin-left: auto;">
            <input class="form-control me-2" id="search-input" type="search" placeholder="Search" aria-label="Search">
            <button class="btn btn-outline-primary" type="submit">Search</button>
        </form>

        <script>
            document.getElementById('search-bar').addEventListener('input', function (event) {
                event.preventDefault();

                var searchQuery = document.getElementById('search-input').value.toLowerCase();

                var mealCards = document.querySelectorAll('.meal-card');

                for (var i = 0; i < mealCards.length; i++) {
                    var mealCard = mealCards[i];
                    var mealName = mealCard.querySelector('.card-title').innerText.toLowerCase();
                    var mealRestaurant = mealCard.querySelector('.card-text').innerText.toLowerCase();

                    if (mealName.includes(searchQuery) || mealRestaurant.includes(searchQuery)) {
                        mealCard.style.display = 'block';
                    } else {
                        mealCard.style.display = 'none';
                    }
                }
            });
        </script>

        <!--Meal Cards-->
        <% fastfood.forEach(meal=> {%>
            <section class="meal-card">
                <!-- Meal card content -->
                <div class="container p-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= meal.item%>
                            </h5>
                            <p class="card-text">
                                <%= meal.restaurant%>
                            </p>
                            <!-- Button trigger modal -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                data-bs-target="#<%= meal._id %>">
                                See more
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="<%= meal._id %>" tabindex="-1"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                                                <%= meal.restaurant%> - <%= meal.item%>
                                            </h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">

                                            <div class="row">
                                                <div class="col-6">
                                                    <p>Calories: <%= meal.calories%>
                                                    </p>
                                                    <p>Cal Fat: <%= meal.cal_fat%>
                                                    </p>
                                                    <p>Total Fat: <%= meal.total_fat%>
                                                    </p>
                                                    <p>Saturated Fat: <%= meal.sat_fat%>
                                                    </p>
                                                    <p>Trans Fat: <%= meal.trans_fat%>
                                                    </p>
                                                    <p>Cholesterol: <%= meal.cholesterol%>
                                                    </p>
                                                    <p>Sodium: <%= meal.sodium%>
                                                    </p>
                                                    <p>Carbs: <%= meal.total_carb%>
                                                    </p>
                                                </div>
                                                <div class="col-6">
                                                    <p>Fiber: <%= meal.fiber%>
                                                    </p>
                                                    <p>Sugar: <%= meal.sugar%>
                                                    </p>
                                                    <p>Protein: <%= meal.protein%>
                                                    </p>
                                                    <p>Vitamin A: <%= meal.vit_a%>
                                                    </p>
                                                    <p>Vitamin C: <%= meal.vit_c%>
                                                    </p>
                                                    <p>Calcium: <%= meal.calcium%>
                                                    </p>
                                                    <p>Salad: <%= meal.salad%>
                                                    </p>
                                                    <p>Vegan: <%= meal.vegan%>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-bs-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <form action="/save" method="post" class="d-inline">
                                <input type="hidden" name="mealId" value="<%= meal._id %>">
                                <button class="btn btn-danger" value="meal">Save to Meal Plans</button>
                            </form>
                            <div class="dropdown d-inline">
                                <button class="btn btn-danger dropdown-toggle" type="button" data-bs-toggle="dropdown"
                                    aria-expanded="false">
                                    Select Meal Type
                                </button>
                                <ul class="dropdown-menu">
                                    <li>
                                        <form action="/assign" method="post" class="d-inline">
                                            <input type="hidden" name="mealId" value="<%= meal._id %>">
                                            <button class="dropdown-item" value="meal">Breakfast</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="/assign" method="post" class="d-inline">
                                            <input type="hidden" name="mealId" value="<%= meal._id %>">
                                            <button class="dropdown-item" value="meal">Lunch</button>
                                        </form>
                                    </li>
                                    <li>
                                        <form action="/assign" method="post" class="d-inline">
                                            <input type="hidden" name="mealId" value="<%= meal._id %>">
                                            <input type="hidden" name="mealId" value="Dinner">
                                            <button class="dropdown-item" value="meal">Dinner</button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
            <%});%>


                <div class="mealCards"></div>
                <div class="empty-space p-5"></div>


                <%- include ('partials/footer.ejs') %>
</body>

</html>