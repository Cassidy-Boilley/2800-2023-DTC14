        crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/82e4826c76.js" crossorigin="anonymous"></script>
    <% if (name==='PythonLover3000' ) { %>
        <%- include ('partials/dark-header.ejs') %>
            <% } else { %>
                <%- include ('partials/header.ejs') %>
                    <% } %>
                        <h1> Homepage </h1>
                        <h2> Welcome, <%= name %>!</h2>
                        <div id="homepageButtons" class="text-center d-grid gap-0.5">
                            <% if (!authenticated) { %>
                                <button type="button" class="btn btn-primary" onclick="window.location.href='/login'">
                                    Login
                                </button>
                                <br>
                                <button type="button" class="btn btn-primary" onclick="window.location.href='/signup'">
                                    Sign up
                                </button>
                                <br>
                                <% } %>
                                    <% if (authenticated) { %>
                                        <button type="button" class="btn btn-primary"
                                            onclick="window.location.href='/history'">
                                            History
                                        </button>
                                        <br>
                                        <form action="/logout" method="post" class="d-inline">
                                            <button type="button" class="btn btn-primary" onclick="submit()"> Logout
                                            </button>
                                        </form>

                                        <% } %>
                        </div>
                        <% if (name==='PythonLover3000' ) { %>
                            <%- include ('partials/dark-footer.ejs') %>
